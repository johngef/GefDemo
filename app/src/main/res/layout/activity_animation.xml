<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.sumu.gefdemo.activity.AnimationActivity">
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="开始tween动画"
        android:onClick="startAnimation"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="开始属性动画"
        android:onClick="startObjectAnimation"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:text="开始frame动画"
        android:onClick="startFrameAnimation"
        />


    <TextView
        android:id="@+id/rotate"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:text="旋转"
        android:gravity="center"
        android:background="#aa1233"
        android:layout_centerInParent="true"
        />
    <TextView
        android:id="@+id/fram_animation"
        android:layout_below="@id/rotate"
        android:layout_marginTop="10dp"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:gravity="center"
        android:layout_centerInParent="true"
        />
    <TextView
        android:id="@+id/object_animation"
        android:layout_below="@id/fram_animation"
        android:layout_marginTop="10dp"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:background="#123"
        android:gravity="center"
        android:layout_centerInParent="true"
        />


</RelativeLayout>
